#----------------------#
# STARTUP APPLICATIONS #
#----------------------#
# enable tap to click
exec_always --no-startup-id xinput set-prop 15 296 1 
# set touchpad speed
exec_always --no-startup-id xinput set-prop 15 287 0.6 
# set background
exec_always --no-startup-id feh --bg-scale /home/marco/bg.jpg
# turn on numpad
exec_always --no-startup-id numlockx on
# run compton
exec_always --no-startup-id compton
# lock after suspend
exec --no-startup-id xss-lock -- $locker &